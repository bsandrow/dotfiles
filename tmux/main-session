#!/bin/bash

session='main-session'

if tmux has-session -t $session >/dev/null 2>&1; then
    tmux attach-session -t $session
else
    tmux new-session -d -s $session -n 'email' 'mutt; zsh -li' \; \
         new-window  -d             -n 'music' 'ncmpcpp; zsh -li' \; \
         new-window  -d             -n 'todo'  'vim ~/docs/todo.md; zsh -li'
    tmux attach-session -t $session
fi

# vim: set ft=sh et ts=4 sw=4 tw=100:
