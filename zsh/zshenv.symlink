#--------------------------------------------------------------------------------
# No Global Config Files
#--------------------------------------------------------------------------------
#   Note: There is no way to ignore the system zshenv file (/etc/zsh/zshenv).
#
unsetopt GLOBAL_RCS
IGNORE_SYSTEM_ZSH=1

#--------------------------------------------------------------------------------
# Set actual location of dotfiles
#--------------------------------------------------------------------------------

export DOTFILES_DIR="$HOME/.dotfiles"

#--------------------------------------------------------------------------------
# Paths
#--------------------------------------------------------------------------------

# Don't stomp on $PATH if it's already set. This is mostly a fallback for
# environments that don't have anything in $PATH at this point.
if [ -z "$PATH" ]; then
    export PATH='/usr/local/bin:/bin:/usr/bin:/usr/games'
fi

# Standard Paths
export SPATH='/usr/local/sbin:/sbin:/usr/sbin'
export MANPATH='/usr/local/man:/usr/local/share/man:/usr/share/man:/usr/man'
export LD_LIBRARY_PATH='/usr/local/lib:/lib:/usr/lib'

# Non-Standard Paths
export PATH="$DOTFILES_DIR/bin:$HOME/bin:$PATH"
export MANPATH="$HOME/man:$HOME/share/man:$MANPATH"

#--------------------------------------------------------------------------------
# Text Editing
#--------------------------------------------------------------------------------

if [ -x $(which vim 2>/dev/null) ]; then
    export EDITOR='vim' VISUAL='vim'
else
    export EDITOR='vi' VISUAL='vi'
fi

export LESS='-iMR'
#export LESSCHARSET=latin1
export PAGER='less'

if which lesspipe >/dev/null 2>&1; then
    eval `lesspipe`
fi

#--------------------------------------------------------------------------------
# Misc. Variables
#--------------------------------------------------------------------------------

date | egrep -q 'GMT|UTC'                   && export TZ='US/Pacific'
echo "$TERM" | egrep -q 'xterm|linux|rxvt'  && export COLORTERM=y
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
#export MAIL="$HOME/mail/inbox/"
#export DH_ALWAYS_EXCLUDE=CVS:.svn:.git
ZSH_PROMPT=fancy_prompt_1

#--------------------------------------------------------------------------------
# Local Temp Space
#--------------------------------------------------------------------------------

export TMPDIR="$HOME/tmp"
export TMP="$HOME/tmp"
[ -d "$TMP" ] || mkdir -p "$TMP"

#--------------------------------------------------------------------------------
# Local Settings
#--------------------------------------------------------------------------------

export WORKDIR="$HOME/work"

if [ -f "$HOME/.local/etc/zsh/zshenv" ]; then
    source "$HOME/.local/etc/zsh/zshenv"
fi

